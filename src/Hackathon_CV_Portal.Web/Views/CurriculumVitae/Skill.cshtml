@using Hackathon_CV_Portal.Application.Implementations.Cv.Models.SkillsVM
@model SkillVM
@{
    ViewData["Title"] = "შენი უნარები";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">შენი უნარები</h1>
        </p>

        @foreach (var workingExperience in @Model.SkillModels)
        {
             <div class="job-item p-3 mb-2 bg-light text-dark">
                    <div class="row g-4">
                        <div class="col-sm-12 col-md-8 d-flex align-items-center">
                            <div class="text-start ps-4">
                                <h5 class="mb-3">@workingExperience.Title</h5>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                            <div class="d-flex mb-3">
                                <a class="btn btn-danger me-2" asp-controller="CurriculumVitae" asp-action="DeleteSkill" asp-route-id="@workingExperience.Id">წაშლა</a>                            
                            </div>
                        </div>
                    </div>
                </div>
        }

          <div class="form-group">
                <a class="btn btn-outline-success float-right" asp-controller="CurriculumVitae"  asp-action="AddSkill">დაამატე უნარი</a>
                <a class="btn btn-outline-secondary" asp-controller="Home"  asp-action="Index">უკან დაბრუნება</a>
          </div>

    </div>
</div>