@using Hackathon_CV_Portal.Web.Models.UserAccountModel
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "პაროლის აღდგენა";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5 ">
                <div class="" style="border-radius: 1rem;">
                    <form asp-action="ForgotPassword" method="post">
                        <div class="alert alert-success bg-soft-primary border-0" role="alert">
                            შეიყვანეთ თქვენი email-მისამართი და გამოგიგზანით პაროლის აღსადგენ ლინკს.
                        </div>
                        @*<div asp-validation-summary="All" class="text-danger"></div>*@
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Email Address" asp-for="Email" class="form-control" />
                            @*<span asp-validation-for="Email" class="text-danger"></span>*@
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">პაროლის აღდგენა</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>