@using Hackathon_CV_Portal.Web.Models.UserAccountModel

@model LogInDto
@{
    ViewData["Title"] = "Login";
}

@using (Html.BeginForm(new { ReturnAcction = ViewBag.ReturnAcction, ReturnController = ViewBag.ReturnController,  RouteId = ViewBag.routeId }))
{
@*<div class="row">
    <div class="col-md-6 offset-lg-3 offset-md-2">
        <div class="row">
            <div class="col-md-8 offset-lg-2 offset-md-1">*@
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <div class="mb-md-5 mt-md-4 pb-5">
  
                <form asp-action="LogIn" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group form-white mb-4">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group form-white mb-4">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="ავტორიზაცია" />
                    </div>
                    <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">დაგავიწყდათ პაროლი?</a></p>
                </form>  
                <div class="d-flex justify-content-center text-center mt-4 pt-1">
                  <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                  <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                  <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                </div>
              </div>
              <div>
                <p class="mb-0">არ გაქვთ ანგარიში? <a asp-controller="Account" asp-action="Register" class="text-white-50 fw-bold">რეგისტრაცია</a>
                </p>
              </div>
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
}
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
